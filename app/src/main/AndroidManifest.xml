<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joao_.monitoria">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Aplication.Monitoria"
        android:allowBackup="true"
        android:icon="@drawable/ic_monitor_club_64"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_monitor_club_64"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Activitys.MainActivity"
            android:label="Universidades"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.SplashScreens"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.FacebookLogin"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.Activity_Lista_Materias"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.Activity_Cadastro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.Activity_Cadastro_Universidade"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.Activity_Gerenciar_Lista_Departamentos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.Activity_Cadastro_Materia"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.Activity_Editar_Materia"
            android:screenOrientation="portrait" />
        <activity android:name=".Activitys.Activity_Lista_Departamentos"></activity>
    </application>

</manifest>